{% extends 'base.twig' %}
{% block main %}
    <div class="ui basic segment">
        <div class="ui left attached rail rail-profile">
            <div class="mt-3">
                <div class="ui basic segment">
                    <div class="ui card">
                        <div class="image">
                            <img src="{{ load_placeholder() }}">
                        </div>
                        <div class="content">
                            <a class="header">Kristy</a>
                            <div class="meta">
                                <span class="date">Joined in 2013</span>
                            </div>
                        </div>
                        <div class="extra content">
                            <a>
                                <i class="paperclip icon"></i>
                                22 Posts
                            </a>
                            <a class="ui bottom right attached label">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="ui text menu profile-menu">
            {#                    <div class="header item">Sort By</div> #}
            <a class="item active tab-item" data-tab="active-posts">
                Closest
            </a>
            <a class="item tab-item" data-tab="xxx">
                New Posts
            </a>
            <a class="item tab-item" data-tab="archive">
                Archive
            </a>
        </div>
        <div class="ui bottom attached tab active" data-tab="active-posts">
            <div>
                <div class="ui very padded top attached segment single-post">
                    <a href="javascript:void(0);">
                        <article class="ui container featured-content">
                            {% include 'components/segment-header.twig' with {'segment_title': 'Some Title'} %}
                            <div class="py-4 mb-4 description featured-description">
                                <p>
                                    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquam aliquid
                                    consequatur dolore dolorem eius eligendi eos eveniet inventore magnam nostrum
                                    provident quisquam, quo, quos rem repellendus rerum sed sequi tempora?
                                </p>
                            </div>
                            <div class="mt-4 featured-footer extra">
                                <img src="{{ load_placeholder() }}" class="ui circular avatar image"> @hahah
                            </div>
                            <div class="ui top right attached teal label with-popup" data-title="Comments"
                                 data-content="23"
                                 data-position="top center">
                                <i class="comments icon"></i> 23
                            </div>
                        </article>
                    </a>
                </div>
                <div class="ui bottom attached menu">
                    <div class="ui upward dropdown left floated item">
                        <i class="settings icon"></i>
                        <div class="menu">
                            <div class="item">
                                <i class="dropdown icon"></i>
                                <span class="text">New</span>
                                <div class="menu">
                                    <div class="item">Document</div>
                                    <div class="item">Image</div>
                                </div>
                            </div>
                            <div class="item">Save As...</div>
                            <div class="item">Edit</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="ui bottom attached tab" data-tab="xxx">
            New Posts
        </div>
        <div class="ui bottom attached tab" data-tab="archive">
            archive
        </div>
    </div>
{% endblock main %}