{% if session('_flash') %}
    <script>
        $(document).ready(function() {
            {% autoescape false %}
            let flash_data = {{ get_flash(key) }};
            {% endautoescape %}
            $('body')
                .toast({
                    showProgress: flash_data.showProgress ?? 'top',
                    classProgress: flash_data.classProgress ?? '',
                    displayTime: flash_data.displayTime ?? 5000,
                    showIcon: flash_data.showIcon ?? 'coffee',
                    message: flash_data.message ?? `Welcome aboard, <strong>@wow</strong>`,
                    position: flash_data.position ?? 'top center',
                    class: flash_data.class ?? ''
                });
        });
    </script>
{% endif %}